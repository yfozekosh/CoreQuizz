@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using CoreQuizz.WebService.ViewModel.Account
@model CoreQuizz.WebService.ViewModel.Account.LoginViewModel

@{
    ViewBag.Title = "title";
}

<div class="row">
    <div class="col-md-4">
        <form asp-controller="Account" asp-action="Login" method="post" class="login-form">
            <h4>Login into system.</h4>
            @if (Model!=null && Model.IsIncorrect)
            {
                <h3 style="color: red">Login or password is incorrect!</h3>
            }
            <hr />
            <div class="form-group">
                <label asp-for="Login" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="Login" class="form-control" />
                    <span asp-validation-for="Login" class="text-danger"></span>
                </div>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="Password" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="Password" class="form-control" type="password"/>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            </div>
            <br/>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <button type="submit" class="btn btn-default">Login</button>
                </div>
            </div>
        </form>
        <form asp-controller="Home" asp-action="DbTest" method="post">
            <button type="submit" class="btn btn-default">TestDb</button>
        </form>
    </div>
</div>